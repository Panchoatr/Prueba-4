<%- include('../partials/header') %>

    <main id="edit">
        <h2 class="edit__title">
            <i class='bx bx-edit-alt'></i>
            Editar Producto
        </h2>
        <% const prueba = categories.category_name %>
            <% console.log('Lo que llega a edits ejs', prueba) %>
                <form class="edit__form" action="/admin/edit/<%= item.product_id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="form__flex">
                        <div class="form__box--flex">
                            <label class="form__label" for="category">Categoría :</label>
                            <select class="form__select" name="category" id="category" required>
                                <option value="" disabled selected hidden>Seleccionar</option>
                                <% categories.forEach(categorie => { %>
                                    <option value="<%= categorie.category_id %>"><%= categorie.category_name %></option>
                                <% });  %>
                            </select>
                        </div>
                        <div class="form__box--flex">
                            <label class="form__label" for="name">Nombre del producto :</label>
                            <input class="form__input" type="text" name="name" id="name" value="<%= item.product_name %>"
                                required>
                        </div>
                    </div>

                    <div>
                        <label class="form__label" for="price">Descripción :</label>
                        <textarea name="description" id="description" cols="30" rows="8" placeholder="Descripción del Producto"
                            required><%= item.product_description %></textarea>
                    </div>
                    <div class="form__flex">
                        <div class="form__box--flex">
                            <label class="form__label" for="price">Precio :</label>
                            <div class="form__input--wrapper"><span>$</span><input class="form__input" type="text"
                                    name="price" id="price" data-type="currency" value="<%= item.price %>"></div>
                        </div>
                    </div>
                    <div class="alert__txt">
                        <p>¡Atención!</p>
                        <p>Si quieres cambiar las imgenes actuales, debes subir la 1ra y 2da sin excepción.</p>
                    </div>
                    <div class="form__flex">
                        <div class="form__box__file">
                            <label class="form__label" for="image1">1ra Imagen :</label>
                            <input type="file" name="image1" id="img1">
                        </div>
                        <div class="form__box__file">
                            <label class="form__label" for="image2">2da Imagen :</label>
                            <input type="file" name="image2" id="img2">
                        </div>
                    </div>
                    <div class="form__box__images">
                        <div class="edit__img">
                            <img src="<%= item.image_front %>" alt="<%= item.product_description%> 1">
                            <p class="edit__img-side">1ra Imagen (Actual)</p>
                        </div>
                        <div class="edit__img">
                            <img src="<%= item.image_back %>" alt="<%= item.product_description%> 2">
                            <p class="edit__img-side">2da Imagen (Actual)</p>
                        </div>
                    </div>
                    <div class="form__buttons">
                        <input class="form__btn" type="submit" value="Modificar Producto">
                        <input class="form__btn" type="reset" value="Limpiar">
                    </div>
                </form>
    </main>


    <%- include('../partials/footer') %>